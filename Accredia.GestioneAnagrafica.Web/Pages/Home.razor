@page "/Home"

<PageTitle>Home</PageTitle>

<MudContainer MaxWidth="MaxWidth.Large">
    <MudGrid>
        <MudItem xs="12">
            <MudCard>
                <MudCardHeader>
                    <CardHeaderContent>
                        <MudText Typo="Typo.h4">Accredia Gestione Anagrafica</MudText>
                    </CardHeaderContent>
                </MudCardHeader>
                <MudCardContent>
                    <MudText>
                        Benvenuto nell'applicazione di gestione anagrafica di Accredia.
                    </MudText>
                </MudCardContent>
            </MudCard>
        </MudItem>

        <MudItem xs="12" sm="6" md="4">
            <MudCard>
                <MudCardHeader>
                    <MudIcon Icon="@Icons.Material.Filled.People" Size="Size.Large" Color="Color.Primary" />
                </MudCardHeader>
                <MudCardContent>
                    <MudText Typo="Typo.h6">Persone</MudText>
                    <MudText Typo="Typo.body2">Gestisci i dati personali</MudText>
                </MudCardContent>
                <MudCardActions>
                    <MudButton Variant="Variant.Text" Color="Color.Primary" href="persone">Apri</MudButton>
                </MudCardActions>
            </MudCard>
        </MudItem>

        <MudItem xs="12" sm="6" md="4">
            <MudCard>
                <MudCardHeader>
                    <MudIcon Icon="@Icons.Material.Filled.Business" Size="Size.Large" Color="Color.Primary" />
                </MudCardHeader>
                <MudCardContent>
                    <MudText Typo="Typo.h6">Enti</MudText>
                    <MudText Typo="Typo.body2">Gestisci gli enti accreditati</MudText>
                </MudCardContent>
                <MudCardActions>
                    <MudButton Variant="Variant.Text" Color="Color.Primary" href="enti">Apri</MudButton>
                </MudCardActions>
            </MudCard>
        </MudItem>

        <MudItem xs="12" sm="6" md="4">
            <MudCard>
                <MudCardHeader>
                    <MudIcon Icon="@Icons.Material.Filled.UploadFile" Size="Size.Large" Color="Color.Primary" />
                </MudCardHeader>
                <MudCardContent>
                    <MudText Typo="Typo.h6">Documenti</MudText>
                    <MudText Typo="Typo.body2">Carica e gestisci i documenti</MudText>
                </MudCardContent>
                <MudCardActions>
                    <MudButton Variant="Variant.Text" Color="Color.Primary" href="documenti">Apri</MudButton>
                </MudCardActions>
            </MudCard>
        </MudItem>
    </MudGrid>
</MudContainer>

@code {
    protected override async Task OnInitializedAsync()
    {
        await Task.CompletedTask;
    }
}
