@code {
    private FormModel formModel = new();
    private List<DataItem> sampleData = new();

    protected override void OnInitialized()
    {
        // Dati di esempio per la tabella
        sampleData = new List<DataItem>
        {
            new() { Id = 1, Nome = "Elemento A", Categoria = "Cat 1", Status = "Attivo" },
            new() { Id = 2, Nome = "Elemento B", Categoria = "Cat 2", Status = "In Revisione" },
            new() { Id = 3, Nome = "Elemento C", Categoria = "Cat 1", Status = "Completato" },
            new() { Id = 4, Nome = "Elemento D", Categoria = "Cat 3", Status = "Attivo" }
        };
    }

    private async Task HandleFormSubmit()
    {
        await Task.Delay(500);
        // Logica di submit
    }

    private Color GetStatusColor(string status) => status switch
    {
        "Attivo" => Color.Success,
        "In Revisione" => Color.Warning,
        "Completato" => Color.Info,
        _ => Color.Default
    };

    public class FormModel
    {
        public string Nome { get; set; } = "";
        public string Cognome { get; set; } = "";
        public string Email { get; set; } = "";
        public string Categoria { get; set; } = "";
        public bool AccettoTermini { get; set; }
    }

    public class DataItem
    {
        public int Id { get; set; }
        public string Nome { get; set; } = "";
        public string Categoria { get; set; } = "";
        public string Status { get; set; } = "";
    }
}

